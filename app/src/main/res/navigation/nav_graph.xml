<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ProfileFragment">

    <fragment
        android:id="@+id/ProfileFragment"
        android:name="com.mika.ProfileFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_ProfileFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            app:popUpTo="@id/ProfileFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_ProfileFragment_to_providerFragment"
            app:destination="@id/providerFragment"
            app:popUpTo="@id/ProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.mika.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_ProfileFragment"
            app:destination="@id/providerFragment" />
    </fragment>
    <fragment
        android:id="@+id/providerFragment"
        android:name="com.mika.ProviderFragment"
        android:label="fragment_provider"
        tools:layout="@layout/fragment_provider" />
</navigation>