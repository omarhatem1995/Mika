<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mika" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:textColor">#ff000f</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/mika_green</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
    </style>

    <style name="ToolbarColor" parent="Theme.Mika">
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.Mika.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance" parent="@style/Theme.AppCompat.Light">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Theme.Mika.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/mika_green</item>
    </style>

    <style name="Theme.Mika.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyEditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="background">@drawable/rounded_green_with_borders</item>
<!--        <item name="android:background">@drawable/edit_text_layout</item>-->
        <item name="android:textDirection">locale</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/white</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>
</resources>