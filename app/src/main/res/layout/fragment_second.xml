<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/first_day"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_baseline_calendar_month_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_day_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Choose First day"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/first_day"
        app:layout_constraintStart_toStartOf="@id/first_day"
        app:layout_constraintTop_toBottomOf="@id/first_day" />

    <ImageView
        android:id="@+id/second_day"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_calendar_month_24"
        app:layout_constraintEnd_toEndOf="@id/first_day_textview"
        app:layout_constraintStart_toStartOf="@id/first_day_textview"
        app:layout_constraintTop_toBottomOf="@id/first_day_textview" />

    <TextView
        android:id="@+id/second_day_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Choose Second day"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/second_day"
        app:layout_constraintStart_toStartOf="@id/second_day"
        app:layout_constraintTop_toBottomOf="@id/second_day" />

    <ImageView
        android:id="@+id/third_day"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_calendar_month_24"
        app:layout_constraintEnd_toEndOf="@id/second_day_textview"
        app:layout_constraintStart_toStartOf="@id/second_day_textview"
        app:layout_constraintTop_toBottomOf="@id/second_day_textview" />

    <TextView
        android:id="@+id/third_day_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Choose Third day"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/third_day"
        app:layout_constraintStart_toStartOf="@id/third_day"
        app:layout_constraintTop_toBottomOf="@id/third_day" />

    <ImageView
        android:id="@+id/fourth_day"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_calendar_month_24"
        app:layout_constraintEnd_toEndOf="@id/third_day_textview"
        app:layout_constraintStart_toStartOf="@id/third_day_textview"
        app:layout_constraintTop_toBottomOf="@id/third_day_textview" />

    <TextView
        android:id="@+id/fourth_day_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Choose Fourth day"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/fourth_day"
        app:layout_constraintStart_toStartOf="@id/fourth_day"
        app:layout_constraintTop_toBottomOf="@id/fourth_day" />


    <Button
        android:id="@+id/submitDates"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="submit"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/fourth_day_textview"
        app:layout_constraintStart_toStartOf="@id/fourth_day_textview"
        app:layout_constraintTop_toBottomOf="@id/fourth_day_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>

